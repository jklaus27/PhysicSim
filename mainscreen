  <!-- Orbit animation -->
  <script>
    (function () {
      const canvas = document.getElementById("orbit-canvas");
      const ctx = canvas.getContext("2d");

      let w, h, dpr;

      const prefersReducedMotion =
        window.matchMedia &&
        window.matchMedia("(prefers-reduced-motion: reduce)").matches;

      const stars = [];
      const orbits = [
        { rx: 0.45, ry: 0.18, speed: 0.0004, phase: 0.3, size: 4 },
        { rx: 0.36, ry: 0.14, speed: 0.0006, phase: 1.5, size: 3 },
        { rx: 0.28, ry: 0.11, speed: 0.0008, phase: 2.4, size: 2.5 },
        { rx: 0.22, ry: 0.09, speed: 0.0010, phase: 0.9, size: 2 }
      ];

      function resize() {
        dpr = Math.min(2, window.devicePixelRatio || 1);
        w = window.innerWidth;
        h = window.innerHeight;

        canvas.width = w * dpr;
        canvas.height = h * dpr;
        canvas.style.width = w + "px";
        canvas.style.height = h + "px";
        ctx.setTransform(dpr, 0, 0, dpr, 0, 0);

        stars.length = 0;
        const count = Math.floor((w * h) / 12000);
        for (let i = 0; i < count; i++) {
          stars.push({
            x: Math.random(),
            y: Math.random(),
            r: Math.random() * 1.4 + 0.3,
            a: Math.random() * 0.5 + 0.2
          });
        }
      }

      function draw(t) {
        ctx.clearRect(0, 0, w, h);

        const cx = w * 0.52;
        const cy = h * 0.45;

        for (const s of stars) {
          ctx.fillStyle = `rgba(255,255,255,${s.a})`;
          ctx.beginPath();
          ctx.arc(s.x * w, s.y * h, s.r, 0, Math.PI * 2);
          ctx.fill();
        }

        ctx.strokeStyle = "rgba(255,255,255,0.12)";
        for (const o of orbits) {
          ctx.beginPath();
          ctx.ellipse(cx, cy, o.rx * w, o.ry * h, 0, 0, Math.PI * 2);
          ctx.stroke();
        }

        for (const o of orbits) {
          const ang = o.phase + t * o.speed;
          const x = cx + o.rx * w * Math.cos(ang);
          const y = cy + o.ry * h * Math.sin(ang);

          ctx.fillStyle = "rgba(255,255,255,0.9)";
          ctx.beginPath();
          ctx.arc(x, y, o.size, 0, Math.PI * 2);
          ctx.fill();
        }
      }

      function loop(t) {
        draw(t);
        requestAnimationFrame(loop);
      }

      resize();
      window.addEventListener("resize", resize);

      if (!prefersReducedMotion) {
        requestAnimationFrame(loop);
      } else {
        draw(0);
      }
    })();
  </script>

